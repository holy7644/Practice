<Window x:Class="SCON.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCON"
        mc:Ignorable="d"
        Title="SCON" Height="387" Width="287"
        WindowStyle="None">
    <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="380" VerticalAlignment="Top" Width="280" Background="#FFFFFFFF" Margin="0,0,-1,-1">
        <TabItem Header="Parameter" IsSelected="True" Background="#FFFFFFFF" FontSize="10">
        </TabItem>
        <TabItem Header="Motor" IsSelected="True" Background="#FFFFFFFF" FontSize="10">
            <Grid Background="#FFFFFFFF">
                <Button x:Name="BStepm" Content="Step -" HorizontalAlignment="Left" Margin="0,229,0,0" VerticalAlignment="Top" Width="60" FontSize="10" IsDefault="True" Height="45"/>
                <Button x:Name="BStepp" Content="Step +" HorizontalAlignment="Left" Margin="63,229,0,0" VerticalAlignment="Top" Width="60" FontSize="10" IsDefault="True" Height="45"/>
                <Button x:Name="BJogm" Content="Jog -" HorizontalAlignment="Left" Margin="141,229,0,0" VerticalAlignment="Top" Width="60" FontSize="10" IsDefault="True" Height="45"/>
                <Button x:Name="BJogp" Content="Jog +" HorizontalAlignment="Left" Margin="210,229,0,0" VerticalAlignment="Top" Width="60" FontSize="10" IsDefault="True" Height="45"/>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="27" Margin="-4,0,0,-4">
                    <Label x:Name="LLm" Content=" L-" Background="White"/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="27" Margin="22,0,0,-4">
                    <Label x:Name="LLp" Content=" L+" Background="White"/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="25" Margin="48,0,0,-4">
                    <Label x:Name="LSlm" Content="SL-" Background="White"/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="25" Margin="72,0,0,-4">
                    <Label x:Name="LSlp" Content="SL+" Background="White"/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="39" Margin="96,0,0,-4">
                    <Label x:Name="LHome" Content="Home" Background="White"/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="39" Margin="134,0,0,-4">
                    <Label x:Name="LAlarm" Content="Alarm" Background="White"/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="39" Margin="172,0,0,-4">
                    <Label x:Name="LServo" Content="Servo" Background="White"/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="64" Margin="210,0,-4,-4">
                    <Label x:Name="LHommed" Content=" Hommed" Background="White"/>
                </Border>
            </Grid>
            <!--<Grid Background="#FFE5E5E5"/>-->
        </TabItem>
    </TabControl>
</Window>
