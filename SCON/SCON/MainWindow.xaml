<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCON"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="SCON.MainWindow"
        mc:Ignorable="d"
        Title="SCON" Height="387.883" Width="288.333"
        WindowStyle="None">
    <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="380" VerticalAlignment="Top" Width="280" Background="#FFFFFFFF" Margin="0,0,-1,-1">
        <TabItem Header="Parameter" IsSelected="True" Background="#FFFFFFFF" FontSize="10">
            <Grid Background="#FFFFFFFF">
                <TextBox x:Name="textBox" Height="17" TextWrapping="Wrap" Margin="-3,-2,113,340" Text="Home Mathod" VerticalAlignment="Bottom" FontSize="10" IsReadOnly="True"/>
                <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="160,-2,-3,0" VerticalAlignment="Top" FontSize="10" Width="117" Height="17" SelectionChanged="ComboBox_SelectionChanged">
                    <ComboBoxItem Content="1. Positive Direction" FontSize="10"/>
                    <ComboBoxItem Content="2. Negative Direction" FontSize="10"/>

                </ComboBox>
                <TextBox x:Name="textBox_Copy" Height="17" TextWrapping="Wrap" Margin="-3,0,113,323" Text="Operaion Direction" VerticalAlignment="Bottom" FontSize="10" IsReadOnly="True"/>
                <ComboBox x:Name="comboBox_Copy" HorizontalAlignment="Left" Margin="160,15,-3,0" VerticalAlignment="Top" FontSize="10" Width="117" Height="17" SelectionChanged="ComboBox_SelectionChanged">
                    <ComboBoxItem Content="1. Positive Direction" FontSize="10"/>
                    <ComboBoxItem Content="2. Negative Direction" FontSize="10"/>

                </ComboBox>
                <TextBox x:Name="textBox_Copy1" Height="17" TextWrapping="Wrap" Margin="-3,0,113,307" Text="Encoder Kind" VerticalAlignment="Bottom" FontSize="10" IsReadOnly="True"/>
                <ComboBox x:Name="comboBox_Copy1" HorizontalAlignment="Left" Margin="160,31,-3,0" VerticalAlignment="Top" FontSize="10" Width="117" Height="17" SelectionChanged="ComboBox_SelectionChanged">
                    <ComboBoxItem Content="1. Servo Motor" FontSize="10"/>
                    <ComboBoxItem Content="2. Step Motor" FontSize="10"/>

                </ComboBox>
                <TextBox x:Name="textBox_Copy2" Height="17" TextWrapping="Wrap" Margin="-3,0,113,291" Text="Orignal Position" VerticalAlignment="Bottom" FontSize="10" IsReadOnly="True"/>
                <TextBox x:Name="textBox_Copy3" Height="17" TextWrapping="Wrap" Margin="160,0,-3,291" Text="0.0000" VerticalAlignment="Bottom" FontSize="10" TextAlignment="Right" />
                <TextBox x:Name="textBox_Copy4" Height="17" TextWrapping="Wrap" Margin="-3,0,113,275" Text="Accelerate(sec)" VerticalAlignment="Bottom" FontSize="10" IsReadOnly="True"/>
                <TextBox x:Name="textBox_Copy5" Height="17" TextWrapping="Wrap" Margin="160,0,-3,275" Text="0.0000" VerticalAlignment="Bottom" FontSize="10" TextAlignment="Right" />
                <TextBox x:Name="textBox_Copy6" Height="17" TextWrapping="Wrap" Margin="-3,0,113,259" Text="Decelerate(sec)" VerticalAlignment="Bottom" FontSize="10" IsReadOnly="True"/>
                <TextBox x:Name="textBox_Copy7" Height="17" TextWrapping="Wrap" Margin="160,0,-3,259" Text="0.0000" VerticalAlignment="Bottom" FontSize="10" TextAlignment="Right" />
                <TextBox x:Name="textBox_Copy8" Height="17" TextWrapping="Wrap" Margin="-3,0,113,243" Text="Speed" VerticalAlignment="Bottom" FontSize="10" IsReadOnly="True"/>
                <TextBox x:Name="textBox_Copy9" Height="17" TextWrapping="Wrap" Margin="160,0,-3,243" Text="0.0000" VerticalAlignment="Bottom" FontSize="10" TextAlignment="Right" />
                <TextBox x:Name="textBox_Copy10" Height="17" TextWrapping="Wrap" Margin="-3,0,113,227" Text="Maximum Speed" VerticalAlignment="Bottom" FontSize="10" IsReadOnly="True"/>
                <TextBox x:Name="textBox_Copy11" Height="17" TextWrapping="Wrap" Margin="160,0,-3,227" Text="0.0000" VerticalAlignment="Bottom" FontSize="10" TextAlignment="Right" />
                <TextBox x:Name="textBox_Copy12" Height="17" TextWrapping="Wrap" Margin="-3,0,113,211" Text="Homming Speed" VerticalAlignment="Bottom" FontSize="10" IsReadOnly="True"/>
                <TextBox x:Name="textBox_Copy13" Height="17" TextWrapping="Wrap" Margin="160,0,-3,211" Text="0.0000" VerticalAlignment="Bottom" FontSize="10" TextAlignment="Right" />
                <TextBox x:Name="textBox_Copy14" Height="17" TextWrapping="Wrap" Margin="-3,0,113,195" Text="Minimum Position" VerticalAlignment="Bottom" FontSize="10" IsReadOnly="True"/>
                <TextBox x:Name="textBox_Copy15" Height="17" TextWrapping="Wrap" Margin="160,0,-3,195" Text="0.0000" VerticalAlignment="Bottom" FontSize="10" TextAlignment="Right" />
                <TextBox x:Name="textBox_Copy16" Height="17" TextWrapping="Wrap" Margin="-3,0,113,179" Text="Maximum Position" VerticalAlignment="Bottom" FontSize="10" IsReadOnly="True"/>
                <TextBox x:Name="textBox_Copy17" Height="17" TextWrapping="Wrap" Margin="160,0,-3,179" Text="0.0000" VerticalAlignment="Bottom" FontSize="10" TextAlignment="Right" />
                <TextBox x:Name="textBox_Copy18" Height="17" TextWrapping="Wrap" Margin="-3,0,113,163" Text="Pich / Revolution" VerticalAlignment="Bottom" FontSize="10" IsReadOnly="True"/>
                <TextBox x:Name="textBox_Copy19" Height="17" TextWrapping="Wrap" Margin="160,0,-3,163" Text="0.0000" VerticalAlignment="Bottom" FontSize="10" TextAlignment="Right" />
                <TextBox x:Name="textBox_Copy20" Height="17" TextWrapping="Wrap" Margin="-3,0,113,147" Text="Pulse / Revolution" VerticalAlignment="Bottom" FontSize="10" IsReadOnly="True"/>
                <TextBox x:Name="textBox_Copy21" Height="17" TextWrapping="Wrap" Margin="160,0,-3,147" Text="0.0000" VerticalAlignment="Bottom" FontSize="10" TextAlignment="Right" />
                <TextBox x:Name="textBox_Copy22" Height="17" TextWrapping="Wrap" Margin="-3,0,113,131" Text="Start Delay (ms)" VerticalAlignment="Bottom" FontSize="10" IsReadOnly="True"/>
                <TextBox x:Name="textBox_Copy23" Height="17" TextWrapping="Wrap" Margin="160,0,-3,131" Text="0" VerticalAlignment="Bottom" FontSize="10" TextAlignment="Right" />


            </Grid>
        </TabItem>
        <TabItem Header="Motor" IsSelected="True" Background="#FFFFFFFF" FontSize="10">
            <Grid Background="#FFFFFFFF">
                <Button x:Name="BStepm" Content="Step -" HorizontalAlignment="Left" Margin="0,229,0,0" VerticalAlignment="Top" Width="60" FontSize="10" IsDefault="True" Height="45"/>
                <Button x:Name="BStepp" Content="Step +" HorizontalAlignment="Left" Margin="63,229,0,0" VerticalAlignment="Top" Width="60" FontSize="10" IsDefault="True" Height="45"/>
                <Button x:Name="BJogm" Content="Jog -" HorizontalAlignment="Left" Margin="141,229,0,0" VerticalAlignment="Top" Width="60" FontSize="10" IsDefault="True" Height="45"/>
                <Button x:Name="BJogp" Content="Jog +" HorizontalAlignment="Left" Margin="210,229,0,0" VerticalAlignment="Top" Width="60" FontSize="10" IsDefault="True" Height="45"/>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="27" Margin="-4,0,0,-4">
                    <Label x:Name="LLm" Content=" L-" Background="White"/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="27" Margin="22,0,0,-4">
                    <Label x:Name="LLp" Content=" L+" Background="White"/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="25" Margin="48,0,0,-4">
                    <Label x:Name="LSlm" Content="SL-" Background="White"/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="25" Margin="72,0,0,-4">
                    <Label x:Name="LSlp" Content="SL+" Background="White"/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="39" Margin="96,0,0,-4">
                    <Label x:Name="LHome" Content="Home" Background="White"/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="39" Margin="134,0,0,-4">
                    <Label x:Name="LAlarm" Content="Alarm" Background="White"/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="39" Margin="172,0,0,-4">
                    <Label x:Name="LServo" Content="Servo" Background="White"/>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="64" Margin="210,0,-4,-4">
                    <Label x:Name="LHommed" Content=" Hommed" Background="White"/>
                </Border>
            </Grid>
            <!--<Grid Background="#FFE5E5E5"/>-->
        </TabItem>

    </TabControl>
</Window>
